<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppActiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/active_button_back_with_corner_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppDisabledButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/disabled_button_back_with_corner_radius</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppSelectableItem">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>